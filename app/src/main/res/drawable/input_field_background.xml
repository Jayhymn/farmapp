<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>

    <item
        android:left="-200dp"
        android:right="-200dp"
        android:top="-200dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#DADADA" />
        </shape>
    </item>

</layer-list>